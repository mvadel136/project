الرقم_المختار = 15; 
تخمين = 1;        

مادام (تخمين != الرقم_المختار) {
    طباعة(تخمين);
    إذا (تخمين < الرقم_المختار) {
        طباعة("أقل من الرقم المختار");
    } وإلا {
        طباعة("أكبر من الرقم المختار");
    }
    تخمين = تخمين + 1;
}
طباعة("تم العثور على الرقم المختار!");
